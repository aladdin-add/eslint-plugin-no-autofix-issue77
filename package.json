{
  "name": "@tplss/node",
  "version": "0.0.0",
  "author": "薛定谔的猫 <hh_2013@foxmail.com>",
  "description": "Node.js boilerplate",
  "main": "./lib/index.js",
  "scripts": {
    "prettier": "prettier -w lib tests",
    "lint": "eslint lib tests",
    "test": "mocha tests/**/*",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "files": [
    "LICENSE",
    "README.md",
    "lib"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "eslint": "^7.29.0",
    "eslint-plugin-no-autofix": "^1.2.1",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "mocha": "^9.0.1",
    "prettier": "^2.3.2",
    "standard-version": "^9.3.0"
  },
  "keywords": [
    "Node.js",
    "boilerplate"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "no-autofix"
    ],
    "rules": {
      "no-autofix/@typescript-eslint/eslint-plugin/array-type": "error"
    },
    "env": {
      "mocha": true
    }
  },
  "license": "MIT",
  "engines": {
    "node": ">=8"
  }
}
